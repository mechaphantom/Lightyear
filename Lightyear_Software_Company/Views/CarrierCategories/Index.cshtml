@model IEnumerable<Lightyear_Software_Company.Models.Model.CarrierCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Carrier Categories</h2>
<button class="btn btn-success" type="button"><a href="/CarrierCategories/Create">Create</a></button>
@*<button class="btn-close btn-success">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</button>*@
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarrierCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarrierCategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarrierCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarrierCategoryDescription)
        </td>
        <td>
            <button class="btn btn-info" type="button">
                @Html.ActionLink("Edit", "Edit", new { id = item.CarrierCategoryID })
            </button> |
            <button class="btn btn-danger" type="button">
                @Html.ActionLink("Delete", "Delete", new { id = item.CarrierCategoryID })
            </button>
        </td>
    </tr>
}

</table>
