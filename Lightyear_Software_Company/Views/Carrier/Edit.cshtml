@model Lightyear_Software_Company.Models.Model.Carrier
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<div class="form">

    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Carrier/Create" enctype="multipart/form-data">*@

    @using (Html.BeginForm("Edit", "Carrier", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Title <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="CarrierTitle" name="CarrierTitle" minlength="5" type="text" required value="@Model.CarrierTitle" />
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Category <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("CarrierCategoryID", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Content <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="CarrierContent" required>@Model.CarrierContent</textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Current Image</label>
            <div class="col-lg-10">
                <img src="@Model.CarrierImageURL" width="150" height="75" />
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Image</label>
            <div class="col-lg-10">
                <input type="file" class="form-control" name="CarrierImageURL" accept=".jpg,.jpeg,.png" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Save</button>
                <button class="btn btn-danger" type="button"><a href="/Carrier/Index">Cancel</a></button>
            </div>
        </div>
    }


    @*</form>*@
</div>