@*@using PagedList;
@using PagedList.Mvc;*@
@model IEnumerable<Lightyear_Software_Company.Models.Model.Carrier>
@{
    ViewBag.Title = "Carrier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<!-- ======= Our Portfolio Section ======= -->
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Carrier Opportunities</h2>
            <ol>
                <li><a href="/Home/Index/">Home</a></li>
                <li><a href="/Home/Carrier/">Carrier</a></li>
            </ol>
        </div>

    </div>
</section><!-- End Our Portfolio Section -->
<!-- ======= Portfolio Section ======= -->
<section class="portfolio">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                @{
                    Html.RenderAction("CarrierCategoryPartial", "Home");
                }
            </div>
        </div>
        <br />
        <br />

        <div class="row portfolio-container" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-wrap">
                    <div class="portfolio-item">
                        <img src="@item.CarrierImageURL" class="img-fluid" alt="@item.CarrierTitle">
                        <div class="portfolio-info">
                            <h3>@item.CarrierTitle</h3>
                            <div>
                                <a href="@item.CarrierImageURL" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.CarrierContent"><i class="bx bx-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>

    </div>
</section><!-- End Portfolio Section -->
